#include<stdio.h>

int main(){
    int P, D, B, soma;
    printf("DIGITE O NÚMERO DE PÃES VENDIDOS NA SEMANA: ");
    scanf("%d", &P);
    printf("DIGITE O NÚMERO DE DOCES VENDIDOS NA SEMANA: ");
    scanf("%d", &D);
    D = D *2;
    printf("DIGITE O NÚMERO DE BOLOS VENDIDOS NA SEMANA: ");
    scanf("%d", &B);
    B = B * 3;
    soma = P + D + B;
    if(soma >= 150){
        printf("B");
    }else if(soma >= 120){
        printf("D");
    }else if(soma >= 100){
        printf("P");
    }else{
        printf("N");
    }
}
